{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"], // 使用 @ 表示从 src/ 开始的路径 [推荐]
      "src/*": ["*"] // 保留对 src/* 的支持（可选）
    },
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  }
}
